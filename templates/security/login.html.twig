{% extends 'base.html.twig' %}

{% block body %}
    <h2>Login</h2>

    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.password) }}
    {{ form_row(form.submit) }}
    {{ form_end(form) }}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
{% endblock %}
